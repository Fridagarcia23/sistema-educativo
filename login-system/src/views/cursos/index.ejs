    // Agregar botón de la primera página «
    if (totalPages > 0) {
        const firstPageButton = document.createElement('li');
        firstPageButton.className = 'page-item';
        firstPageButton.innerHTML = `<a class="page-link" href="#" data-page="1">«</a>`;
        pagination.appendChild(firstPageButton);
    }

    // Agregar botón de página anterior ‹
    if (totalPages > 1) {
        const prevPageButton = document.createElement('li');
        prevPageButton.className = 'page-item';
        prevPageButton.innerHTML = `<a class="page-link" href="#" data-page="${1}">‹</a>`;
        pagination.appendChild(prevPageButton);
    }

    // Crear botones de páginas numéricas
    for (let i = 1; i <= totalPages; i++) {
        const pageButton = document.createElement('li');
        pageButton.className = 'page-item';
        pageButton.innerHTML = `<a class="page-link" href="#" data-page="${i}">${i}</a>`;
        pagination.appendChild(pageButton);
    }

    // Agregar botón de página siguiente ›
    if (totalPages > 1) {
        const nextPageButton = document.createElement('li');
        nextPageButton.className = 'page-item';
        nextPageButton.innerHTML = `<a class="page-link" href="#" data-page="${totalPages}">›</a>`;
        pagination.appendChild(nextPageButton);
    }

    // Agregar botón de la última página »
    if (totalPages > 0) {
        const lastPageButton = document.createElement('li');
        lastPageButton.className = 'page-item';
        lastPageButton.innerHTML = `<a class="page-link" href="#" data-page="${totalPages}">»</a>`;
        pagination.appendChild(lastPageButton);
    }

    // Mostrar la primera página
    showPage(1);

    // Agregar eventos a los botones de paginación
    pagination.querySelectorAll('.page-link').forEach(link => {
        link.addEventListener('click', function(event) {
            event.preventDefault();
            const page = parseInt(this.getAttribute('data-page'));
            showPage(page);
        });
    });
}

function showPage(page) {
    const rows = cursosBody.querySelectorAll('tr');
    const start = (page - 1) * rowsPerPage;
    const end = start + rowsPerPage;

    // Ocultar todas las filas
    rows.forEach((row, index) => {
        row.style.display = (index >= start && index < end) ? '' : 'none';
    });
}

document.addEventListener('DOMContentLoaded', paginateTable);

